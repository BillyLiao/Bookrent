<%= form_for (@book), :html => {:multipart => true} do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :writer %>
	<%= f.text_field :writer %>

	<%= f.label :left %>
	<%= f.text_field :left %>

	<%= f.file_field :image %>
	<%= f.submit "Update", class: "btn btn-primary" %>

<% end %>
