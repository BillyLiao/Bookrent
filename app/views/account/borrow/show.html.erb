<div class = 'col-md-12'>
  <% if current_user.restriction %>
      <p style='color:red'><%= 'You are under restriction until ' + current_user.restriction_date.to_s %>
  <% end %>
  <h2 class="text-center"> My books </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Name </th>
        <th> Borrowing date </th>
        <th> Returning date </th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td> # </td> 
          <td> <%= book.name %> </td> 
          <td> <%= book.borrowed_at %> </td> 
          <td> <%= book.returned_at %> </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>